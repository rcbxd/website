doctype html
html(lang='en', dir='ltr', style='scroll-behavior: smooth')
  head
    meta(charset='utf-8')
    title rcbxd's blog
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    meta(name='description', content='rcbxd\'s blog')
    link(rel='stylesheet', href='/blog/style.css', type='text/css')
    base(href='blog/')
  body
    include ../nav.pug
    div(id="posts")
      each post in posts
        div(class="post")
          if posts[0].dataValues.id == post.dataValues.id
            h1(id="newest") Newest Post
          h2 
            | #{months[post.dataValues.date.getMonth()]} 
            span(class="day")
              | #{post.dataValues.date.getDate()} 
          h1(class="title") #{post.dataValues.title}
          p #{post.dataValues.description}
          a(href=`/blog/post/${post.id}`) READ MORE
    #cursor
    script(type='text/javascript', src='../../static/blog/blog.js')
