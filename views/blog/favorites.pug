doctype html
html(lang='en', dir='ltr', style='scroll-behavior: smooth')
  head
    meta(charset='utf-8')
    title your favorites
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel="stylesheet", href='/prism/prism.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.2/TweenMax.min.js')
    link(rel='stylesheet', href='/blog/style.css', type='text/css')
  body
    include ../nav.pug
    div(id="favorites")
      h1(style="font-size: 48pt; margin-left: 10%")
        | Your Favorites
      if posts.length == 0
        a(style="margin-left: 10%; font-size: 22pt; text-decoration: none !important") You haven't liked any posts yet.
      each post in posts
        a(style="margin-left: 10%; font-size: 22pt" href="/blog/post/"+post.id) - #{post.title}
        br
      
    script(src='/favorites/favorites.js')