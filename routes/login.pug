doctype html
html(lang='en', dir='ltr', style='scroll-behavior: smooth')
  head
    meta(charset='utf-8')
    title Log In
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    meta(name='description') 
    link(rel='stylesheet', href='/static/dashboard/login.css', type='text/css')
    link(rel="stylesheet", href='/static/prism/prism.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.0.2/TweenMax.min.js')
    link(rel="stylesheet", href="/static/bootstrap.min.css")
  body
    include nav.pug
    h1 
        | Log In
    h2
        | #{ message }
    form(action="" method="post" class="col-6")   
        div(class="form-group")
            label(for="form-email-field") Email
            input(type="email" class="form-control" id="form-email-field" name="email" placeholder="Email" required)     
        div(class="form-group")
            label(for="form-pass-field") Password
            input(type="password" class="form-control" id="form-pass-field" name="password" placeholder="Password" required)
        input(type="submit" class="btn btn-secondary")